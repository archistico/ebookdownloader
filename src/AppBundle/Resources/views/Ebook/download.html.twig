{% extends "::base.html.twig" %}

{% block title %}Download{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
    <h4>Titolo: {{ opera.titolo }}</h4>
    <p>Autore: {{ opera.autore }}<br>
    ISBN: {{ opera.isbn }}</p>
    {% if opera.filepdf is not empty %}
        <a target="_blank" href="{{ path('downloadpdf', {'codice': codice}) }}">Download ebook (PDF)</a>
    {% endif %}
    
    {% if opera.fileepub is not empty %}
        <a target="_blank" href="{{ path('downloadepub', {'codice': codice}) }}">Download ebook (EPUB)</a>
    {% endif %}

    {% if opera.filemobi is not empty %}
        <a target="_blank" href="{{ path('downloadmobi', {'codice': codice}) }}">Download ebook (MOBI)</a>
    {% endif %}

    </div>
</div>
{% endblock %}