{% extends "::base.html.twig" %}

{% block title %}Lista codici{% endblock %}

{% block body %}

{% for message in app.flashes('notice') %}
    <div class="alert alert-warning" role="alert">
      {{ message }}
    </div>
{% endfor %}

<div class="row">
    <div class="col-lg-6">
        <h2>Nuovo codice</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-primary btn-block" href="{{ path('codicenuovo') }}">Nuovo</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
    <h2>Lista codici</h2>
    <div class="table-responsive"> 
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Opera</th>
                    <th>Codice</th>
                    <th>Download</th>
                    <th>X</th>
                </tr>
            </thead>
            <tbody>
        {% for o in codici %}
            <tr>
                <td>{{ o.id }}</td>
                <td>{{ o.opere }}</td>
                <td>{{ o.codice }}</td>
                <td>{{ o.download }}</td>
                <td><a class="btn btn-danger" href="{{ path('codicecancella', {'id': o.id}) }}">X</a></td>
            </tr>
        {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
</div>
{% endblock %}
